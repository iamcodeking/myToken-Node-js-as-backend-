<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doc_enter">
        <EditText
            android:id="@+id/field1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            android:hint="name"
            android:paddingStart="8dp"
            />
    <EditText
        android:layout_below="@id/field1"
        android:id="@+id/field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"
        android:hint="degree"
        android:paddingStart="8dp"
        />
    <EditText
        android:layout_below="@id/field2"
        android:id="@+id/field3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"
        android:hint="speciality"
        android:paddingStart="8dp"
        />
    <EditText
        android:layout_below="@id/field3"
        android:id="@+id/field4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"
        android:hint="exprience"
        android:paddingStart="8dp"
        />
    <EditText
        android:layout_below="@id/field4"
        android:id="@+id/field5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"
        android:hint="location"
        android:paddingStart="8dp"
        />
    <EditText
        android:layout_below="@id/field5"
        android:id="@+id/field6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"
        android:hint="Max token"
        android:paddingStart="8dp"
        />
    <EditText
        android:layout_below="@id/field6"
        android:id="@+id/field7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"
        android:hint="Fees"
        android:paddingStart="8dp"
        />
</RelativeLayout>