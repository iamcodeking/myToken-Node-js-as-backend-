<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doc_profile">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="20sp"
        android:id="@+id/doc_name"
        android:hint="name"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_name"
        android:layout_centerHorizontal="true"
        android:hint="Special"
        android:layout_marginTop="16sp"
        android:id="@+id/doc_special"
        />
    <TextView

        android:id="@+id/degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_special"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="16sp"
        android:hint="degree and exprience"    
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/fees"
        android:hint="fees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:layout_below="@id/degree"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/curr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Current Token Number"
        android:layout_marginStart="32dp"
        />
    <TextView
        android:id="@+id/max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/curr"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:hint="400"
        android:gravity="center"

        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/max"
        android:layout_centerHorizontal="true"
        android:text="Total Tokens Available "
        android:textColor="@android:color/black"
        />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="2dp"
        android:layout_below="@id/curr"
        android:layout_height="100dp"
        android:id="@+id/linear"
        >
        <View
            android:id="@+id/view"
            android:layout_toRightOf="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"/>
    </LinearLayout>
    <TextView
        android:id="@+id/expect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="Token Number Available"

        />
    <TextView
        android:id="@+id/curr_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curr"
        android:layout_toLeftOf="@id/linear"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:textSize="60dp"
        android:hint="89"
        android:textColor="@android:color/holo_red_dark"
        />
    <TextView

        android:id="@+id/expect_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expect"
        android:layout_toRightOf="@id/linear"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:textSize="60sp"
        android:hint="89"
        android:textColor="@android:color/holo_green_dark"
        />
    <Button
        android:id="@+id/addtoken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear"
        android:layout_marginTop="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/holo_blue_light"
        android:text="Add My Token"
        android:textColor="@android:color/black"
        />
    

</RelativeLayout>